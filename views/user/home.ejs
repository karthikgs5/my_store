<% if (categories && categories.length > 0) { %>
    <% for (let j = 0; j < categories.length; j++) { %>
      <div class="p-b-10 ml-5">
      <h3 class="ltext-103 cl5 border-1">
         <b> <%= categories[j].name %></b>
        </h3>
      </div>
  
      <% if (product && product.length > 0) { %>
        <section class="categories container-fluid justify-content-between">
          <div class="row ml-5">
            <% for (let i = 0; i < product.length; i++) { %>
              <% const id = product[i].category.toString() %>
              <% const newId = id.substring(0, 24) %>
  
              <% if (categories[j]._id == newId) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                  <div class="categories__item set-bg" data-setbg="/admin/product/<%= product[i].images[0] %>">
                    <div class="categories__text" style="margin-top: 10rem;">
                      <h4 ><b><%= product[i].name %></b></h4>
                      <p></p>
                      <a class="text-warning" href="product-details?productid=<%= product[i]._id %>"><b>Shop now</b></a>
                    </div>
                  </div>
                </div>
              <% } %>
            <% } %>
          </div>
        </section>
      <% } %>
    <% } %>
  <% } %>
  

