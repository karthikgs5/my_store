<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MY STORE-SIGNUP-PAGE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 100%);height:60rem">
      <div class="container">
        <div class="row gx-lg-5 align-items-center border-danger">
          <div class="col-lg-6 mb-5 mb-lg-0 border-danger">
            <h1 class="my-5 display-3 fw-bold ls-tight">
                <img style="height: 150px;width: 200px" src="data:image/png;base64," alt=""><br />
              User Registration <br />
              <span class="text-dark">Form</span>
            </h1>
            
          </div>
  
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="card">
              <div class="card-body py-5 px-md-5">
                <form action="/register" method="post">
                  
                  <!-- 2 column grid layout with text inputs for the first and last names -->
                  <div class="row">
                    <div class="mb-4 border-danger">
                      <div class="form-outline border-secondary">
                        <input type="text" id="form3Example1" class="form-control border-danger" name="name"required>
                        <label class="form-label" for="form3Example1">User Name</label>
                      </div>
                    </div>
                    <% 
  
    if(typeof  errName!= 'undefined'){
       %>
  
       <p style="color: rgb(160, 10, 10);"><%= errName %></p>
  
       <%
    }
  
  
  
  %> 
                    
                  </div>
  
                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <input type="email" id="form3Example3" class="form-control border-danger" name="email"required/>
                    <label class="form-label" for="form3Example3">Email address</label>
                  </div>
                   
                    <!-- phone input -->
                  <div class="form-outline mb-4">
                    <input type="phone" id="form3Example3" class="form-control border-danger" name="phone"required/>
                    <label class="form-label" for="form3Example3">Phone no</label>
                  </div>
  
                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <input type="password" id="form3Example4" class="form-control border-danger" name="password"required minlength="8"/>
                    <label class="form-label" for="form3Example4">Password</label>
                  </div>
  
                  
  
                  <!-- Submit button -->
                  <button type="submit" class="btn border-danger" style="background-color:rgb(84, 237, 99)">
                    Sign up
                  </button>
                  <br>
                  <a style="text-decoration: none; border-radius: 5%;" href="/login">Sign-in</a>
                  
                  <% 
  
    if(typeof message != 'undefined'){
       %>
  
       <p style="color: green;"><%= message %></p>
  
       <%
    }
  %> 
  
                  
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
    